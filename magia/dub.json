{
	"authors": [
		"Enalye"
	],
	"buildTypes": {
		"debug": {
			"buildOptions": [
				"debugMode",
				"debugInfo"
			]
		},
		"release": {
			"buildOptions": [
				"releaseMode",
				"inline",
				"noBoundsCheck",
				"optimize"
			]
		},
		"unittest": {
			"buildOptions": [
				"debugMode",
				"debugInfo",
				"unittests"
			]
		}
	},
	"configurations": [
		{
			"name": "linux-build",
			"platforms": [
				"linux"
			],
			"postBuildCommands": [
				"cp ../lib$ARCH/*.dll ../bin"
			],
			"targetPath": "../bin",
			"targetType": "executable"
		},
		{
			"name": "windows-build",
			"platforms": [
				"windows"
			],
			"targetPath": "../bin$ARCH",
			"targetType": "executable"
		},
		{
			"lflags": [
				"-subsystem:windows",
				"-entry:mainCRTStartup"
			],
			"name": "windows-release",
			"platforms": [
				"windows"
			],
			"postBuildCommands": [
				"copy ..\\lib$ARCH\\*.dll ..\\release$ARCH\\game"
			],
			"targetPath": "../release$ARCH/game",
			"targetType": "executable"
		}
	],
	"copyright": "Copyright Â© 2021, Enalye",
	"dependencies": {
		"bindbc-opengl": "~>0.17.1",
		"bindbc-sdl": "~>0.21.4",
		"gl3n": "~>1.4.1",
		"grimoire": {
			"path": "../grimoire",
			"version": ">=0.0.0"
		}
	},
	"description": "Magia 2D Game Engine",
	"name": "magia",
	"targetName": "magia",
	"targetType": "executable",
	"versions": [
		"GL_41",
		"GL_ARB",
		"SDL_202",
		"SDL_Image_204",
		"SDL_TTF_2014",
		"SDL_Mixer_204"
	],
	"workingDirectory": ".."
}